{
  "name": "@vm75/inditrans",
  "version": "0.4.5",
  "description": "An experimental transliterator library for some Indic/Brahmic scripts.",
  "main": "./dist/src/index.js",
  "author": "VM75",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vm75/inditrans"
  },
  "files": [
    "dist/src/*.ts",
    "dist/src/*.js",
    "dist/src/*.wasm"
  ],
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "clean": "shx rm -rf dist/*",
    "build": "yarn build-wasm && yarn copy-files && tsc",
    "build-wasm": "make -C .. wasm",
    "watch": "tsc --watch",
    "test": "yarn build && yarn jest --config jestconfig.json",
    "copy-files": "shx mkdir -p dist/src && shx cp -f src/inditrans.wasm dist/src/",
    "prepack": "yarn clean && yarn test",
    "pub": "npm publish --access=public"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^18.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.4"
  },
  "keywords": [
    "Transliterate",
    "Indian",
    "Indian language",
    "Indian script",
    "Devanagari",
    "Tamil",
    "Sanskrit",
    "Telugu",
    "Kannada",
    "Malayalam",
    "Bengali",
    "Gurmukhi",
    "Gujarati",
    "Oriya",
    "Brahmic",
    "Thai",
    "Tibetan",
    "Burmese",
    "Khmer",
    "Vedic accents",
    "Wasm",
    "ISO 15919",
    "IAST",
    "ITRANS",
    "IPA",
    "TITUS"
  ]
}
