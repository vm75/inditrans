{
  "configurations": [
    {
      "name": "Dart current file",
      "type": "dart",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "Debug flutter example",
      "type": "dart",
      "request": "launch",
      "cwd": "flutter/example",
      "program": "lib/main.dart"
    },
    {
      "name": "dart-example (ffi)",
      "program": "bin/example_dart.dart",
      "cwd": "flutter/example.dart",
      "request": "launch",
      "type": "dart",
    },
    {
      "name": "dart-example (web)",
      "program": "web",
      "cwd": "flutter/example.dart",
      "request": "launch",
      "type": "dart"
    },
    {
      "name": "Debug nodejs",
      "type": "node-terminal",
      "request": "launch",
      "cwd": "${workspaceFolder}/nodejs",
      "command": "yarn test"
    },
    {
      "name": "Debug native (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/out/inditrans_test",
      "args": [],
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "C/C++: clang++ build inditrans_test",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Build wasm (powershell)",
      "type": "PowerShell",
      "request": "launch",
      "script": "${workspaceFolder}/scripts/build_wasm.ps1 wasm",
      "cwd": "${cwd}"
    },
    {
      "name": "Bump Version",
      "type": "dart",
      "request": "launch",
      "program": "scripts/bump_version.dart",
      "cwd": "${workspaceFolder}",
      "args": [
        "patch",
        "log",
        "test",
      ]
    },
  ]
}