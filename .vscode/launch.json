{
    "configurations": [
        {
            "name": "Flutter",
            "program": "lib/main.dart",
            "cwd": "flutter\\example",
            "request": "launch",
            "type": "dart"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: test-wasm-ts",
            "request": "launch",
            "command": "npm run test-wasm-ts",
            "cwd": "${workspaceFolder}\\nodejs"
        },
        {
            "type": "node-terminal",
            "name": "Run Script: test-ts",
            "request": "launch",
            "command": "npm run test-ts",
            "cwd": "${workspaceFolder}\\nodejs"
        },
        {
            "name": "Inditrans native (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/inditrans_native",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "C/C++: clang++ build inditrans_native",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              }
            ]
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/nodejs/dist/src/index.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
    ]
}